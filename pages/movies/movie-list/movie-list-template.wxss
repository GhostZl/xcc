@import "../movie/movie-template.wxss";
.movie-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

 .movie-list-container .inner-container{
    margin: 0  auto 20rpx;
} 

.movie-list-container .head {
  padding: 30rpx 20rpx 22rpx;
  /*display:flex;
  flex-direction: row;
  justify-content:space-between;*/
}

.movie-list-container .slogan {
  font-size: 24rpx;
}

.movie-list-container .more {
  float: right;
}

.movie-list-container .more-text {
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
}

.movie-list-container .more-img {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.movie-list-container .movie-items{
    display:flex;
    flex-direction: row;
}